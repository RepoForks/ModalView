<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Demo.MyModalView">

    <ScrollView>
		<StackLayout Padding="10">
			<Label TextColor="Black" Text="Login" HeightRequest="40" />
			<Entry Placeholder="Username" HeightRequest="40" />
			<Entry Placeholder="Password" HeightRequest="40" />
			<Button Text="Login!" HeightRequest="40" Clicked="OnClose"/>
		</StackLayout>
	</ScrollView>

</ContentView>
